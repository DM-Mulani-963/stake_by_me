# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=stake_by_me
APP_ENV=production
DEBUG=false

# Database Configuration
POSTGRES_USER=stake_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=stake_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Authentication
API_USERNAME=admin
API_PASSWORD=change_this_password
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Browser Automation
HEADLESS=true
BROWSER_TIMEOUT=30000

# Logging
LOG_LEVEL=INFO

# Worker Configuration
WORKER_PROCESSES=1
WORKER_NAME=stake_worker

# Rate Limiting
MAX_JOBS_PER_HOUR=20

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost,http://localhost:8000

# Optional: Email Notifications (future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@example.com

# Optional: Monitoring (future feature)
# SENTRY_DSN=your_sentry_dsn_here

# Paths (relative to project root)
INPUT_FOLDER=./data
UPLOAD_FOLDER=./input
OUTPUT_FOLDER=./output
LOGS_FOLDER=./logs
SCREENSHOTS_FOLDER=./screenshots
